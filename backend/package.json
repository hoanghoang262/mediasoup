    "typescript-eslint": "^8.34.0",
    "ws": "^8.18.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "main": "",
  "private": true,
  "scripts": {
    "build": "pnpm clean && swc src -d dist",
    "clean": "rm -rf dist",
    "depcheck": "pnpx depcheck",
    "dev": "tsx watch src/bin/www.ts",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "pnpm syncpack:fix",
    "prepare": "husky",
    "start": "node dist/src/bin/www.js",
    "syncpack:check": "pnpx syncpack list-mismatches",
    "syncpack:fix": "pnpx syncpack fix-mismatches",
    "syncpack:format": "pnpx syncpack format",
    "syncpack:lint": "pnpx syncpack lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit"
  },
  "type": "module"
}
