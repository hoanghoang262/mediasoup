# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=5000

# WebSocket Configuration
VITE_WS_URL=ws://localhost:3000
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=1000

# Application Configuration
VITE_APP_NAME=MediaSoup Video Meeting
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Media Configuration
VITE_MEDIA_AUDIO_ENABLED=true
VITE_MEDIA_VIDEO_ENABLED=true
VITE_MEDIA_SCREEN_SHARE_ENABLED=true

# Logging Configuration
VITE_LOG_LEVEL=debug
VITE_LOG_CONSOLE_ENABLED=true
VITE_LOG_REMOTE_ENABLED=false

# Feature Flags
VITE_FEATURE_SCREEN_SHARING=true
VITE_FEATURE_CHAT=true
VITE_FEATURE_RECORDING=false

# Performance Configuration
VITE_STATS_MODE=lazy

# TURN Server Configuration
# Set VITE_TURN_ENABLED=false for local development (same machine)
# Set VITE_TURN_ENABLED=true for LAN/production (different machines/networks)
VITE_TURN_ENABLED=false
VITE_TURN_SERVER_URL=turn:127.0.0.1:3478
VITE_TURN_SERVER_USERNAME=turnuser
VITE_TURN_SERVER_PASSWORD=your_turn_password

# Environment Examples:
# 
# Local Development (same machine):
#   VITE_API_URL=http://localhost:3000/api
#   VITE_WS_URL=ws://localhost:3000
#   VITE_TURN_ENABLED=false
#
# LAN Development (different devices):
#   VITE_API_URL=http://192.168.x.x:3000/api
#   VITE_WS_URL=ws://192.168.x.x:3000
#   VITE_TURN_ENABLED=true
#   VITE_TURN_SERVER_URL=turn:192.168.x.x:3478
#
# Production:
#   VITE_API_URL=https://your-domain.com/api
#   VITE_WS_URL=wss://your-domain.com
#   VITE_TURN_ENABLED=true
#   VITE_TURN_SERVER_URL=turn:your-turn-server.com:3478 